@*
=====================================================
AI ÖNERİ SAYFASI (Index.cshtml)
Yapay zeka destekli egzersiz ve beslenme önerisi
=====================================================
*@

@model AIOneriViewModel
@{
    ViewData["Title"] = "AI Fitness Danışmanı";
}

<div class="row justify-content-center py-4">
    <div class="col-lg-10">
        <!-- Başlık -->
        <div class="text-center mb-5">
            <div class="ai-header-icon mb-3">
                <i class="bi bi-robot"></i>
            </div>
            <h1 class="display-5 fw-bold">AI Fitness Danışmanı</h1>
            <p class="lead text-muted">
                Bilgilerinizi girin, size özel egzersiz ve beslenme programı oluşturalım
            </p>
        </div>

        <div class="row g-4">
            <!-- Sol Taraf: Form -->
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-clipboard-data me-2"></i>Bilgileriniz</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            @Html.AntiForgeryToken()
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <!-- Fiziksel Bilgiler -->
                            <h6 class="text-primary mb-3"><i class="bi bi-person me-1"></i> Fiziksel Bilgiler</h6>
                            
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label asp-for="Istek.Yas" class="form-label">Yaş *</label>
                                    <input asp-for="Istek.Yas" type="number" class="form-control" />
                                    <span asp-validation-for="Istek.Yas" class="text-danger small"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Istek.Cinsiyet" class="form-label">Cinsiyet *</label>
                                    <select asp-for="Istek.Cinsiyet" class="form-select"
                                            asp-items="Html.GetEnumSelectList<Cinsiyet>()">
                                    </select>
                                </div>
                            </div>

                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label asp-for="Istek.Boy" class="form-label">Boy (cm) *</label>
                                    <input asp-for="Istek.Boy" type="number" class="form-control" id="boyInput" oninput="hesaplaBMI()" />
                                    <span asp-validation-for="Istek.Boy" class="text-danger small"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Istek.Kilo" class="form-label">Kilo (kg) *</label>
                                    <input asp-for="Istek.Kilo" type="number" step="0.1" class="form-control" id="kiloInput" oninput="hesaplaBMI()" />
                                    <span asp-validation-for="Istek.Kilo" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- BMI Göstergesi -->
                            <div id="bmiGosterge" class="bmi-display mb-3" style="display: none;">
                                <div class="bmi-value" id="bmiDeger">0</div>
                                <div class="bmi-kategori" id="bmiKategori">-</div>
                            </div>

                            <!-- Hedefler -->
                            <h6 class="text-primary mb-3 mt-4"><i class="bi bi-bullseye me-1"></i> Hedefleriniz</h6>
                            
                            <div class="mb-3">
                                <label asp-for="Istek.FitnessHedefi" class="form-label">Fitness Hedefi *</label>
                                <select asp-for="Istek.FitnessHedefi" class="form-select"
                                        asp-items="Html.GetEnumSelectList<FitnessHedefi>()">
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Istek.DeneyimSeviyesi" class="form-label">Deneyim Seviyesi *</label>
                                <select asp-for="Istek.DeneyimSeviyesi" class="form-select"
                                        asp-items="Html.GetEnumSelectList<DeneyimSeviyesi>()">
                                </select>
                            </div>

                            <!-- Program Detayları -->
                            <h6 class="text-primary mb-3 mt-4"><i class="bi bi-calendar-week me-1"></i> Program Detayları</h6>
                            
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <label asp-for="Istek.HaftalikGun" class="form-label">Haftada Kaç Gün?</label>
                                    <select asp-for="Istek.HaftalikGun" class="form-select">
                                        <option value="1">1 gün</option>
                                        <option value="2">2 gün</option>
                                        <option value="3" selected>3 gün</option>
                                        <option value="4">4 gün</option>
                                        <option value="5">5 gün</option>
                                        <option value="6">6 gün</option>
                                        <option value="7">7 gün</option>
                                    </select>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Istek.GunlukSureDakika" class="form-label">Günlük Süre</label>
                                    <select asp-for="Istek.GunlukSureDakika" class="form-select">
                                        <option value="30">30 dakika</option>
                                        <option value="45">45 dakika</option>
                                        <option value="60" selected>60 dakika</option>
                                        <option value="90">90 dakika</option>
                                        <option value="120">120 dakika</option>
                                    </select>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Istek.OneriTuru" class="form-label">Öneri Türü</label>
                                <select asp-for="Istek.OneriTuru" class="form-select"
                                        asp-items="Html.GetEnumSelectList<OneriTuru>()">
                                </select>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Istek.OdakBolge" class="form-label">Odak Bölge (Opsiyonel)</label>
                                <select asp-for="Istek.OdakBolge" class="form-select"
                                        asp-items="Html.GetEnumSelectList<VucutBolgesi>()">
                                    <option value="">Tümü</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Istek.SaglikNotu" class="form-label">Sağlık Notu (Opsiyonel)</label>
                                <textarea asp-for="Istek.SaglikNotu" class="form-control" rows="2" 
                                          placeholder="Varsa sağlık sorunlarınızı belirtin..."></textarea>
                            </div>

                            <!-- Gönder Butonu -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-magic me-2"></i>Öneri Oluştur
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Sağ Taraf: Sonuçlar -->
            <div class="col-lg-7">
                @if (Model.FormGonderildi && Model.Sonuc != null)
                {
                    @if (Model.Sonuc.Basarili)
                    {
                        <div class="card shadow-lg border-0 fade-in">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-check-circle me-2"></i>Kişiselleştirilmiş Öneriniz Hazır!
                                </h5>
                            </div>
                            <div class="card-body">
                                <!-- BMI Yorumu -->
                                @if (!string.IsNullOrEmpty(Model.Sonuc.BMIYorumu))
                                {
                                    <div class="result-section mb-4">
                                        <pre class="result-content">@Model.Sonuc.BMIYorumu</pre>
                                    </div>
                                }

                                <!-- Egzersiz Önerisi -->
                                @if (!string.IsNullOrEmpty(Model.Sonuc.EgzersizOnerisi))
                                {
                                    <div class="result-section mb-4">
                                        <h5 class="text-primary"><i class="bi bi-activity me-2"></i>Egzersiz Programı</h5>
                                        <pre class="result-content">@Model.Sonuc.EgzersizOnerisi</pre>
                                    </div>
                                }

                                <!-- Diyet Önerisi -->
                                @if (!string.IsNullOrEmpty(Model.Sonuc.DiyetOnerisi))
                                {
                                    <div class="result-section mb-4">
                                        <h5 class="text-success"><i class="bi bi-heart-pulse me-2"></i>Beslenme Önerileri</h5>
                                        <pre class="result-content">@Model.Sonuc.DiyetOnerisi</pre>
                                    </div>
                                }

                                <!-- Genel Tavsiyeler -->
                                @if (!string.IsNullOrEmpty(Model.Sonuc.GenelTavsiyeler))
                                {
                                    <div class="result-section">
                                        <h5 class="text-info"><i class="bi bi-lightbulb me-2"></i>Genel Tavsiyeler</h5>
                                        <pre class="result-content">@Model.Sonuc.GenelTavsiyeler</pre>
                                    </div>
                                }

                                <div class="text-muted small mt-4">
                                    <i class="bi bi-clock me-1"></i>
                                    Oluşturulma: @Model.Sonuc.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @Model.Sonuc.HataMesaji
                        </div>
                    }
                }
                else
                {
                    <!-- Boş Durum -->
                    <div class="empty-result text-center py-5">
                        <div class="empty-icon mb-4">
                            <i class="bi bi-robot"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Öneriniz Burada Görünecek</h4>
                        <p class="text-muted">
                            Sol taraftaki formu doldurup "Öneri Oluştur" butonuna tıklayın.
                            Yapay zeka size özel egzersiz ve beslenme programı hazırlayacak.
                        </p>
                        <div class="features mt-4">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="feature-item">
                                        <i class="bi bi-graph-up-arrow text-primary"></i>
                                        <span>BMI Analizi</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="feature-item">
                                        <i class="bi bi-activity text-success"></i>
                                        <span>Egzersiz Programı</span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="feature-item">
                                        <i class="bi bi-heart-pulse text-danger"></i>
                                        <span>Beslenme Önerisi</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
<style>
    .ai-header-icon {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #e63946, #f4a261);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        animation: pulse 2s infinite;
    }
    
    .ai-header-icon i {
        font-size: 3rem;
        color: white;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .bmi-display {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 15px;
        padding: 1.5rem;
        text-align: center;
    }
    
    .bmi-value {
        font-size: 3rem;
        font-weight: 700;
        color: var(--primary-color);
    }
    
    .bmi-kategori {
        font-size: 1.1rem;
        font-weight: 500;
    }
    
    .result-section {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1.5rem;
    }
    
    .result-content {
        white-space: pre-wrap;
        font-family: inherit;
        font-size: 0.95rem;
        background: transparent;
        border: none;
        margin: 0;
        padding: 0;
    }
    
    .empty-result {
        background: white;
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }
    
    .empty-icon {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, rgba(230,57,70,0.1), rgba(244,162,97,0.1));
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
    
    .empty-icon i {
        font-size: 3rem;
        color: var(--primary-color);
    }
    
    .feature-item {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 1rem;
        text-align: center;
    }
    
    .feature-item i {
        font-size: 2rem;
        display: block;
        margin-bottom: 0.5rem;
    }
    
    .feature-item span {
        font-weight: 500;
        font-size: 0.9rem;
    }
</style>
}

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    function hesaplaBMI() {
        var boy = parseFloat(document.getElementById('boyInput').value);
        var kilo = parseFloat(document.getElementById('kiloInput').value);
        
        if (boy > 0 && kilo > 0) {
            var boyMetre = boy / 100;
            var bmi = (kilo / (boyMetre * boyMetre)).toFixed(1);
            
            var kategori = '';
            var renk = '';
            
            if (bmi < 18.5) { kategori = 'Zayıf'; renk = '#17a2b8'; }
            else if (bmi < 25) { kategori = 'Normal'; renk = '#28a745'; }
            else if (bmi < 30) { kategori = 'Fazla Kilolu'; renk = '#ffc107'; }
            else { kategori = 'Obez'; renk = '#dc3545'; }
            
            document.getElementById('bmiDeger').textContent = bmi;
            document.getElementById('bmiDeger').style.color = renk;
            document.getElementById('bmiKategori').textContent = kategori;
            document.getElementById('bmiKategori').style.color = renk;
            document.getElementById('bmiGosterge').style.display = 'block';
        } else {
            document.getElementById('bmiGosterge').style.display = 'none';
        }
    }
    
    // Sayfa yüklendiğinde BMI hesapla
    document.addEventListener('DOMContentLoaded', function() {
        hesaplaBMI();
    });
</script>
}

