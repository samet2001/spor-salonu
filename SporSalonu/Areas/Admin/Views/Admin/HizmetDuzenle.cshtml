@*
=====================================================
ADMIN - HİZMET DÜZENLE SAYFASI
=====================================================
*@

@model Hizmet
@{
    ViewData["Title"] = "Hizmet Düzenle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Sayfa Başlığı -->
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Hizmetler" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h2 class="fw-bold mb-0">
                        <i class="bi bi-pencil-square text-warning me-2"></i>Hizmet Düzenle
                    </h2>
                    <p class="text-muted mb-0">@Model.Ad bilgilerini güncelleyin</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="HizmetDuzenle" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Hizmet Bilgileri -->
                        <h5 class="fw-bold mb-3 text-primary">
                            <i class="bi bi-info-circle me-2"></i>Hizmet Bilgileri
                        </h5>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label asp-for="Ad" class="form-label">Hizmet Adı *</label>
                                <input asp-for="Ad" class="form-control" />
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label asp-for="Aciklama" class="form-label">Açıklama *</label>
                                <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Aciklama" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Kategori" class="form-label">Kategori *</label>
                                <select asp-for="Kategori" asp-items="Html.GetEnumSelectList<HizmetKategorisi>()" class="form-select">
                                </select>
                                <span asp-validation-for="Kategori" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SporSalonuId" class="form-label">Spor Salonu *</label>
                                <select asp-for="SporSalonuId" asp-items="ViewBag.SporSalonlari" class="form-select">
                                    <option value="">Seçiniz...</option>
                                </select>
                            </div>
                        </div>

                        <!-- Süre ve Ücret -->
                        <h5 class="fw-bold mb-3 text-primary">
                            <i class="bi bi-currency-dollar me-2"></i>Süre ve Ücret
                        </h5>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="SureDakika" class="form-label">Süre (Dakika) *</label>
                                <input asp-for="SureDakika" class="form-control" type="number" min="15" step="15" />
                                <span asp-validation-for="SureDakika" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Ucret" class="form-label">Ücret (₺) *</label>
                                <input asp-for="Ucret" class="form-control" type="number" min="0" step="5" />
                                <span asp-validation-for="Ucret" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MaksimumKatilimci" class="form-label">Maks. Katılımcı</label>
                                <input asp-for="MaksimumKatilimci" class="form-control" type="number" min="1" />
                            </div>
                        </div>

                        <!-- Durum -->
                        <div class="form-check form-switch mb-4">
                            <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                            <label asp-for="Aktif" class="form-check-label">Aktif</label>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-lg me-2"></i>Güncelle
                            </button>
                            <a asp-action="Hizmetler" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-2"></i>İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

