@*
=====================================================
ADMIN - HİZMETLER SAYFASI
Tüm hizmetleri listeler ve yönetir
=====================================================
*@

@model List<Hizmet>
@{
    ViewData["Title"] = "Hizmet Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-grid-fill text-primary me-2"></i>Hizmet Yönetimi
            </h2>
            <p class="text-muted mb-0">Hizmetleri görüntüleyin, ekleyin ve düzenleyin</p>
        </div>
        <a asp-action="HizmetOlustur" class="btn btn-primary">
            <i class="bi bi-plus-lg me-2"></i>Yeni Hizmet
        </a>
    </div>

    <!-- Hizmet Tablosu -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Hizmet Adı</th>
                            <th>Kategori</th>
                            <th>Süre</th>
                            <th>Ücret</th>
                            <th>Kapasite</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var hizmet in Model)
                            {
                                <tr>
                                    <td><strong>@hizmet.Ad</strong></td>
                                    <td><span class="badge bg-primary">@hizmet.Kategori</span></td>
                                    <td>@hizmet.SureDakika dk</td>
                                    <td><strong>₺@hizmet.Ucret</strong></td>
                                    <td>@hizmet.MaksimumKatilimci kişi</td>
                                    <td>
                                        @if (hizmet.Aktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="HizmetDuzenle" asp-route-id="@hizmet.Id" class="btn btn-outline-warning" title="Düzenle">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="HizmetSil" asp-route-id="@hizmet.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="bi bi-inbox display-4 text-muted"></i>
                                    <p class="mt-2 text-muted">Henüz hizmet bulunmuyor</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

