@*
=====================================================
ADMİN DASHBOARD SAYFASI (Index.cshtml)
Admin paneli ana sayfası - İstatistikler ve özet
=====================================================
*@

@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Admin Başlık -->
<div class="admin-header mb-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="fw-bold mb-1">
                <i class="bi bi-speedometer2 me-2"></i>Admin Panel
            </h1>
            <p class="text-muted mb-0">Hoş geldiniz! Sistemin genel durumunu görüntüleyin.</p>
        </div>
        <div class="col-auto">
            <span class="badge bg-success fs-6">
                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                Sistem Aktif
            </span>
        </div>
    </div>
</div>

<!-- İstatistik Kartları -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="stat-card primary">
            <div class="stat-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.ToplamUye</h3>
                <span>Toplam Üye</span>
            </div>
            <a asp-action="Uyeler" class="stat-link">
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card success">
            <div class="stat-icon">
                <i class="bi bi-person-badge-fill"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.ToplamAntrenor</h3>
                <span>Aktif Antrenör</span>
            </div>
            <a asp-action="Antrenorler" class="stat-link">
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card info">
            <div class="stat-icon">
                <i class="bi bi-calendar-check-fill"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.BugunRandevuSayisi</h3>
                <span>Bugün Randevu</span>
            </div>
            <a asp-action="Randevular" class="stat-link">
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="stat-card warning">
            <div class="stat-icon">
                <i class="bi bi-hourglass-split"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.BekleyenRandevuSayisi</h3>
                <span>Onay Bekleyen</span>
            </div>
            <a asp-action="Randevular" asp-route-durum="Beklemede" class="stat-link">
                <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Hızlı İşlemler -->
<div class="row g-4 mb-4">
    <div class="col-lg-4">
        <div class="card h-100">
            <div class="card-header bg-transparent">
                <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Hızlı İşlemler</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="AntrenorOlustur" class="btn btn-outline-primary">
                        <i class="bi bi-person-plus me-2"></i>Yeni Antrenör Ekle
                    </a>
                    <a asp-action="HizmetOlustur" class="btn btn-outline-success">
                        <i class="bi bi-grid-plus me-2"></i>Yeni Hizmet Ekle
                    </a>
                    <a asp-action="Randevular" class="btn btn-outline-info">
                        <i class="bi bi-calendar3 me-2"></i>Randevuları Yönet
                    </a>
                    <a asp-action="Uyeler" class="btn btn-outline-secondary">
                        <i class="bi bi-people me-2"></i>Üyeleri Görüntüle
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Son Randevular -->
    <div class="col-lg-8">
        <div class="card h-100">
            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-calendar-event me-2"></i>Son Randevular</h5>
                <a asp-action="Randevular" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
            </div>
            <div class="card-body p-0">
                @if (Model.SonRandevular.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Üye</th>
                                    <th>Antrenör</th>
                                    <th>Hizmet</th>
                                    <th>Tarih</th>
                                    <th>Durum</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var randevu in Model.SonRandevular)
                                {
                                    var durumClass = randevu.Durum switch
                                    {
                                        RandevuDurumu.Beklemede => "warning",
                                        RandevuDurumu.Onaylandi => "info",
                                        RandevuDurumu.Tamamlandi => "success",
                                        RandevuDurumu.IptalEdildi => "danger",
                                        _ => "secondary"
                                    };
                                    <tr>
                                        <td>@randevu.Uye?.TamIsim</td>
                                        <td>@randevu.Antrenor?.TamIsim</td>
                                        <td>@randevu.Hizmet?.Ad</td>
                                        <td>@randevu.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                                        <td><span class="badge bg-@durumClass">@randevu.Durum</span></td>
                                        <td>
                                            @if (randevu.Durum == RandevuDurumu.Beklemede)
                                            {
                                                <form asp-action="RandevuOnayla" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@randevu.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success">
                                                        <i class="bi bi-check"></i>
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="bi bi-calendar-x display-4"></i>
                        <p class="mt-2">Henüz randevu yok</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Son Üyeler -->
<div class="card">
    <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i>Son Kayıt Olan Üyeler</h5>
        <a asp-action="Uyeler" class="btn btn-sm btn-outline-primary">Tümünü Gör</a>
    </div>
    <div class="card-body p-0">
        @if (Model.SonUyeler.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>E-posta</th>
                            <th>Telefon</th>
                            <th>Kayıt Tarihi</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var uye in Model.SonUyeler)
                        {
                            <tr>
                                <td>@uye.TamIsim</td>
                                <td>@uye.Email</td>
                                <td>@uye.PhoneNumber</td>
                                <td>@uye.UyelikTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (uye.AktifUyelik)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4 text-muted">
                <i class="bi bi-person-x display-4"></i>
                <p class="mt-2">Henüz üye yok</p>
            </div>
        }
    </div>
</div>

@section Styles {
<style>
    .admin-header {
        background: linear-gradient(135deg, var(--secondary-color), #2a4a6d);
        color: white;
        padding: 2rem;
        border-radius: 20px;
        margin-top: -1rem;
    }
    
    .admin-header p { color: rgba(255,255,255,0.8); }
    
    .stat-card {
        background: white;
        border-radius: 20px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        position: relative;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
    }
    
    .stat-card .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .stat-card .stat-icon i { font-size: 1.8rem; color: white; }
    
    .stat-card.primary .stat-icon { background: linear-gradient(135deg, #e63946, #f4a261); }
    .stat-card.success .stat-icon { background: linear-gradient(135deg, #198754, #20c997); }
    .stat-card.info .stat-icon { background: linear-gradient(135deg, #0dcaf0, #6f42c1); }
    .stat-card.warning .stat-icon { background: linear-gradient(135deg, #ffc107, #fd7e14); }
    
    .stat-card h3 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0;
        color: var(--secondary-color);
    }
    
    .stat-card span {
        color: #6c757d;
        font-size: 0.9rem;
    }
    
    .stat-link {
        position: absolute;
        right: 1.5rem;
        width: 35px;
        height: 35px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        transition: all 0.3s ease;
    }
    
    .stat-link:hover {
        background: var(--primary-color);
        color: white;
    }
</style>
}

