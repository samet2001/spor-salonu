@*
=====================================================
ADMIN - RANDEVULAR SAYFASI
Tüm randevuları listeler ve yönetir
=====================================================
*@

@model List<Randevu>
@{
    ViewData["Title"] = "Randevu Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-calendar-check-fill text-info me-2"></i>Randevu Yönetimi
            </h2>
            <p class="text-muted mb-0">Tüm randevuları görüntüleyin ve yönetin</p>
        </div>
        <span class="badge bg-info fs-6">Toplam: @Model.Count randevu</span>
    </div>

    <!-- Filtre Butonları -->
    @{
        var durum = ViewBag.Durum as string;
    }
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a asp-action="Randevular" class="btn btn-outline-secondary @(string.IsNullOrEmpty(durum) ? "active" : "")">Tümü</a>
            <a asp-action="Randevular" asp-route-durum="Beklemede" class="btn btn-outline-warning @(durum == "Beklemede" ? "active" : "")">Beklemede</a>
            <a asp-action="Randevular" asp-route-durum="Onaylandi" class="btn btn-outline-success @(durum == "Onaylandi" ? "active" : "")">Onaylandı</a>
            <a asp-action="Randevular" asp-route-durum="Tamamlandi" class="btn btn-outline-primary @(durum == "Tamamlandi" ? "active" : "")">Tamamlandı</a>
            <a asp-action="Randevular" asp-route-durum="IptalEdildi" class="btn btn-outline-danger @(durum == "IptalEdildi" ? "active" : "")">İptal Edildi</a>
        </div>
    </div>

    <!-- Randevu Tablosu -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Üye</th>
                            <th>Antrenör</th>
                            <th>Hizmet</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var randevu in Model)
                            {
                                <tr>
                                    <td><strong>#@randevu.Id</strong></td>
                                    <td>
                                        <strong>@randevu.Uye?.Ad @randevu.Uye?.Soyad</strong>
                                        <br><small class="text-muted">@randevu.Uye?.Email</small>
                                    </td>
                                    <td>@randevu.Antrenor?.TamIsim</td>
                                    <td>
                                        <span class="badge bg-light text-dark">@randevu.Hizmet?.Ad</span>
                                    </td>
                                    <td>@randevu.RandevuTarihi.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                    <td>@randevu.BaslangicSaati.ToString(@"hh\:mm") - @randevu.BitisSaati.ToString(@"hh\:mm")</td>
                                    <td><strong>₺@randevu.Ucret</strong></td>
                                    <td>
                                        @switch (randevu.Durum)
                                        {
                                            case RandevuDurumu.Beklemede:
                                                <span class="badge bg-warning text-dark">Beklemede</span>
                                                break;
                                            case RandevuDurumu.Onaylandi:
                                                <span class="badge bg-success">Onaylandı</span>
                                                break;
                                            case RandevuDurumu.Tamamlandi:
                                                <span class="badge bg-primary">Tamamlandı</span>
                                                break;
                                            case RandevuDurumu.IptalEdildi:
                                                <span class="badge bg-danger">İptal Edildi</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            @if (randevu.Durum == RandevuDurumu.Beklemede)
                                            {
                                                <form asp-action="RandevuOnayla" asp-route-id="@randevu.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-success btn-sm" title="Onayla">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="RandevuReddet" asp-route-id="@randevu.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-danger btn-sm" title="Reddet">
                                                        <i class="bi bi-x-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (randevu.Durum == RandevuDurumu.Onaylandi)
                                            {
                                                <form asp-action="RandevuTamamla" asp-route-id="@randevu.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-primary btn-sm" title="Tamamla">
                                                        <i class="bi bi-check-all"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5">
                                    <i class="bi bi-calendar-x display-4 text-muted"></i>
                                    <p class="mt-2 text-muted">Randevu bulunmuyor</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

