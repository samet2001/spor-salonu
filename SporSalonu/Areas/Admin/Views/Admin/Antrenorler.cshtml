@*
=====================================================
ADMIN - ANTRENÖRLER SAYFASI
Tüm antrenörleri listeler ve yönetir
=====================================================
*@

@model List<Antrenor>
@{
    ViewData["Title"] = "Antrenör Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="bi bi-person-badge-fill text-success me-2"></i>Antrenör Yönetimi
            </h2>
            <p class="text-muted mb-0">Antrenörleri görüntüleyin, ekleyin ve düzenleyin</p>
        </div>
        <a asp-action="AntrenorOlustur" class="btn btn-success">
            <i class="bi bi-plus-lg me-2"></i>Yeni Antrenör
        </a>
    </div>

    <!-- Antrenör Kartları -->
    <div class="row g-4">
        @if (Model.Any())
        {
            @foreach (var antrenor in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="trainer-avatar me-3">
                                    @if (!string.IsNullOrEmpty(antrenor.FotografUrl))
                                    {
                                        <img src="@antrenor.FotografUrl" alt="@antrenor.TamIsim" />
                                    }
                                    else
                                    {
                                        <i class="bi bi-person"></i>
                                    }
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">@antrenor.TamIsim</h5>
                                    <small class="text-muted">@antrenor.DeneyimYili yıl deneyim</small>
                                </div>
                                @if (antrenor.Aktif)
                                {
                                    <span class="badge bg-success ms-auto">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger ms-auto">Pasif</span>
                                }
                            </div>
                            
                            <p class="text-muted small mb-2">
                                <i class="bi bi-star-fill text-warning me-1"></i>
                                @antrenor.UzmanlikAlanlari
                            </p>
                            
                            <div class="d-flex gap-2 mb-3">
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-envelope me-1"></i>@antrenor.Eposta
                                </span>
                            </div>
                            
                            <div class="d-flex gap-2 mb-3">
                                <span class="badge bg-light text-dark">
                                    <i class="bi bi-telephone me-1"></i>@antrenor.Telefon
                                </span>
                            </div>
                            
                            <div class="small text-muted mb-3">
                                <i class="bi bi-clock me-1"></i>
                                @antrenor.MesaiBaslangic.ToString(@"hh\:mm") - @antrenor.MesaiBitis.ToString(@"hh\:mm")
                                <span class="ms-2">|</span>
                                <span class="ms-2">₺@antrenor.SeansUcreti/seans</span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="AntrenorDetay" asp-route-id="@antrenor.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i>Detay
                                </a>
                                <a asp-action="AntrenorDuzenle" asp-route-id="@antrenor.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i>Düzenle
                                </a>
                                <a asp-action="AntrenorSil" asp-route-id="@antrenor.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i>Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="bi bi-person-x display-1 text-muted"></i>
                    <h4 class="mt-3">Henüz antrenör bulunmuyor</h4>
                    <p class="text-muted">Yeni antrenör eklemek için yukarıdaki butonu kullanın.</p>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .trainer-avatar {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #28a745, #20c997);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }
    .trainer-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .trainer-avatar i {
        font-size: 1.8rem;
        color: white;
    }
</style>

